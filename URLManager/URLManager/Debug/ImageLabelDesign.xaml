<UserControl x:Class="URLManager.Debug.ImageLabelDesign"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:URLManager.Debug"
             mc:Ignorable="d" 
             d:DesignHeight="20" MinWidth="20" >
    <Grid Height="20" MinWidth="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle RadiusX="10" RadiusY="10" Fill="Red" Grid.ColumnSpan="2"/>
        <Image Width="15" Height="15" Margin="5,0,5,0" Source="/URLManager;component/Resources/CategoryIcon/CloudIcon.png"/>
        
        <TextBlock Grid.Column="1" Text="클라우드 저장" Margin="0,0,5,0" TextAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
